{
  "name": "Facebook Turtle",
  "version": "1.0",
  "permissions": [
    "http://*/*"
  ],
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js", "turtle.js"],
      "run_at": "document_end"
  }],
  "browser_action": {
    "name": "Kill Facebook's News Feed",
    "icons": ["icon.png"]
  },
  "manifest_version": 2
}